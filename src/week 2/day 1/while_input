what_to_do = ''
while what_to_do != 'Exit':
    what_to_do = input('Type something for continue and '
                           'Exit to quit: ')
    if what_to_do == 'Exit':
        print('Program quited!')
        break
    try:
        if isinstance(int(what_to_do), int):
            pass
            print('You typed a number!')
    except ValueError:
        print('You typed in a string')




